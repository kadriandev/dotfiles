cmd - return : open -n -a "Alacritty" 
cmd + shift - return : open -n -a "Google Chrome" 

ctrl - 0 : yabai -m space --focus next
ctrl - 9 : yabai -m space --focus prev
ctrl - tab : yabai -m space --focus recent

#change focus between external displays (left and right)
cmd + ctrl - 0 : yabai -m display --focus next
cmd + ctrl - 9 : yabai -m display --focus prev

# -- Changing Window Focus
# change window focus within space
cmd + ctrl - j : yabai -m window --focus south
cmd + ctrl - k : yabai -m window --focus north
cmd + ctrl - h : yabai -m window --focus west
cmd + ctrl - l : yabai -m window --focus east

cmd + ctrl - 1 : yabai -m window --space 1 --focus
cmd + ctrl - 2 : yabai -m window --space 2 --focus
cmd + ctrl - 3 : yabai -m window --space 3 --focus
cmd + ctrl - 4 : yabai -m window --space 4 --focus

cmd + ctrl - n : yabai -m window --space next --focus
cmd + ctrl - p : yabai -m window --space prev --focus

# maximize a window
cmd + ctrl - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
cmd + ctrl - e : yabai -m space --balance

# -- Moving Windows Around --
# swap windows
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# -- Modifying the Layout --
ctrl + alt - r : yabai -m space --rotate 270
ctrl + alt - y : yabai -m space --mirror y-axis
ctrl + alt - x : yabai -m space --mirror x-axis

ctrl + alt - c : yabai -m space --create && yabai -m space --focus last
ctrl + alt - d : yabai -m space --destroy

# move only this window and force other windows to adjust
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east


# -- Starting/Stopping/Restarting Yabai --
# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# application specific bindings
ctrl - l [
    "Google Chrome": skhd -k "cmd + alt - right"
]


ctrl - h [
    "Google Chrome": skhd -k "cmd + alt - left"
]

ctrl - w [
    "Google Chrome": skhd -k "cmd - w"
]

ctrl - t [
    "Google Chrome": skhd -k "cmd - t"
]
